{
    "name": "kozo/mechanical",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "kozo"
        }
    ],
    "require": {
        "kozo/watchmaker": "0.1.0",
        "cakephp/cakephp": "^5.0",
        "cakephp/bake": "^3.0.0"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "Mechanical\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --colors -p -s --standard=CakePHP src/",
        "phpcbf": "phpcbf --colors --parallel=16 -p src/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
